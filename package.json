{
  "name": "mioki-root",
  "private": true,
  "type": "module",
  "version": "0.3.0",
  "packageManager": "pnpm@10.26.0",
  "description": "A simple OneBot v11 framework.",
  "keywords": [
    "onebot",
    "onebot v11",
    "framework",
    "bot"
  ],
  "scripts": {
    "start": "pnpm -C example run start",
    "dev": "pnpm --parallel --filter './packages/**' run dev",
    "build": "pnpm --parallel --filter './packages/**' run build",
    "release": "bumpp -r",
    "publish:ci": "node ./scripts/publish-ci.ts"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "author": "Viki <hi@viki.moe> (https://github.com/vikiboss)",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "bumpp": "^10.3.2",
    "mioki": "workspace:*",
    "napcat-sdk": "workspace:*",
    "prettier": "^3.7.4",
    "puppeteer-core": "^24.33.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5"
  }
}
